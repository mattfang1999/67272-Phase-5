<div class="card">
  <div class="card-content">
    

    <h4>Number of Employees per Store that Didn't Show Up to Shift</h4>
      
      <table class="striped highlight">
        <thead>
          <tr>
            <th>Store Name</th>
            <th>Number of Employees</th>
            <th>Call this Store!</th>
                       
          </tr>
        </thead>
        <tbody>
          <% stores.each do |store| %>
            <tr>

            
              <td class='hyperlink'><%= link_to store.name, store_path(store) %></td>

              <td><%=store.shifts.pending.past.count%></td>
              <td><%=store.phone%></td>
            </tr>

           

            
        <% end %>
        </tbody>
      </table>
      <p class="supertiny"></p>
      <br />
      
      <%= will_paginate stores, previous_label: "Previous&nbsp;", next_label: "&nbsp;Next" %>
      <br />
   
  
  </div>
</div>