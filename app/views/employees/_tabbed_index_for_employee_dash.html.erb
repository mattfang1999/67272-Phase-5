
<div id='tabbed'>
  <h4><%=current_user.proper_name%>'s Dashboard</h4>
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
      	<li class="tab col s3"><a href="#test1">Upcoming Shifts</a></li>
        <li class="tab col s3"><a href="#test2">All Past Shifts</a></li>
        
        
      </ul>
    </div>
    <div id="test1" class="col s12"><%= render :partial => "shifts/special_employee_shift_clock_view", locals: {shifts: @upcoming_shifts_in_7, state: "Upcoming", can_clock: true }%> </div>
    <div id="test2" class="col s12"><%= render :partial => "shifts/shifts_lists", locals: {shifts: @past_shifts, state: "Past", can_clock: false, is_past: false}%> </div>
    <ul class="collapsible">
    <li>
      <div class="collapsible-header"><i class="material-icons">attach_money</i>View Payroll Statement from Past 7 Days</div>
      <div class="collapsible-body">
      <table class='striped-highlight'>
        <thead>
          <tr>

              <th>Total Amount Earned</th>
              <th>Hours Worked</th>
              <th>Pay Rate</th>
              <th>Pay Grade</th>

          </tr>
        </thead>

        <tbody>
         	<th>$<%=payroll.pay_rate%></th>
         	<th><%=payroll.hours%> hours</th>
         	<th>$<%=payroll.pay_earned%></th>
          <th><%=payroll.pay_grade%></th>
          
        </tbody>
      </table>
      	
 

    </li>
  </ul>


    
	</div>
   
    
</div>

<%= link_to(employee_path(current_user), class: 'btn-small yellow darken-1') do %>
