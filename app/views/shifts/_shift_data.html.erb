  <div class="card-content">
    <h4>Shift <%= @shift.id %> for <%= @shift.assignment.employee.proper_name%></h4>

        <p>Date:</p>
        
        <p><%=@shift.date%></p>
        <br>
        <p>Start Time:</p>
       
        <p><%=@shift.start_time.strftime("%I:%M %p")%></p>
        <br>
        <p>End Time:</p>
        <p><%=@shift.end_time.strftime("%I:%M %p")%></p>
        <br>
        <p>Notes:</p>
      
        <p><%=@shift.notes%></p>
        <br>

        <p>Shift Status:</p>
        <p><%=@shift.status%></p>
        

      

        

     

    
      <br>
  </div>
</div>

