<div id='search-words'>
	

<h4>Search result for term <em>'<%= @query %>'</em> resulted in <%= pluralize(@total_hits, 'hit') %></h4>
<p class="supertiny">&nbsp;</p>

<% unless @employees.empty? %>
  <p><em><strong>Employees matching term '<%= @query %>'</strong></em></p>
  <ul>
    <% for employee in @employees do %>
      <li><%= link_to employee.proper_name, employee_path(employee) %></li>
    <% end %>
  </ul>
  <p class="smtext">&nbsp;</p>
<% end %>


</div>


